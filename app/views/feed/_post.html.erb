<div class="w-full lg:w-[40vw] h-screen flex flex-col justify-center items-center">
  <p class="text-2xl text-gray-100"> <%= post.caption %> </p>
  <% if post.video.attached? %>
    <%= video_tag(post.video, controls: true, class: "w-full h-full") %>
  <% else %>
    <p class="text-xl text-gray-100"> No video found <p>
  <% end %>
</div>