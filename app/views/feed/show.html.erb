<div class="h-screen w-full overflow-y-scroll"
  data-controller="feed" data-action="scroll->feed#scroll">
  <div class="w-full h-[125vh] flex flex-col items-center py-4">
    <% if @post %>
      <%= render "post", post: @post %>
    <% else %>
      <p class="text-xl text-gray-500"> No more posts to watch </p>
      <p class="text-2xl text-indigo-600"> Share your videos to grow the platform! </p>
    <% end %>
  </div>
</div>