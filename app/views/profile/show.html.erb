<div class="w-full h-screen flex flex-col items-center pt-24">
  <div class="w-full flex justify-center"> 
    <%= image_tag(@user.avatar.variant(:profile), class: "w-24 h-24 rounded-full object-cover") if @user.avatar.attached? %>
  </div>
  <h1 class="text-5xl text-gray-100"> <%= @user.username %> </h1>
  <% if current_user == @user %>
    <div class="max-w-5xl w-full mx-auto px-5 flex justify-end mt-8">
      <%= link_to "Edit Account", edit_user_registration_path, class: "text-lg text-gray-100" %>
    </div>
  <% end %>

  <div class="max-w-7xl w-full mx-auto px-8 grid md:grid-cols-3 lg:grid-cols-4 gap-8 mt-8">
    <%= render partial: "post", collection: @user.posts.order(created_at: :desc) %>
  </div>
</div>