<%= link_to post, class: "hover:scale-105 transition-all duration-250" do %>
  <div class="w-full h-64 bg-gray-500 flex flex-col rounded-lg">
    <%= image_tag(post.video.preview(resize_to_limit: [300, 300, { crop: :centre }]), class: "w-full h-40 object-cover rounded-t-lg") if post.video.attached? %>
    <div class="flex flex-col gap-2 p-3">
      <span class="text-lg text-gray-100"> <%= post.caption %> </span>
    </div>

    <div class="w-full flex gap-4">
      <div class="flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 text-gray-100">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
        </svg>
        <span class="text-lg text-gray-100"> <%= post.likes.count %> </span>
      </div>

      <div class="flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 text-gray-100">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
        </svg>
        <span class="text-lg text-gray-100"> <%= post.views.count %> </span>
      </div>
    </div>
  </div>
<% end %>