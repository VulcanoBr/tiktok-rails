<div class="w-full h-16 fixed top-0 bg-gray-700"> 
  <div class="h-full max-w-7xl w-full mx-auto px-4 flex items-center justify-between"> 
    <%= link_to "Tiktok-Rails", "/", class: "text-xl text-gray-100" %>
    <% if current_user %>
      <div class="flex items-center gap-4">
        <%= link_to "Create post", new_post_path, class: "px-3 py-2 rounded-lg bg-gradient-to-r from-purple-500 to-indigo-500 text-indigo-50" %>
        <span class="text-xl text-gray-100"> <%= current_user.username %> </span>
        <%= link_to "Sign out", destroy_user_session_path, class: "px-3 py-2 rounded-lg text-lg text-gray-100 bg-gray-900 border-2 border-gray-100",
          data: { turbo_method: :delete } %>
      </div>
    <% end %>
  </div>
</div>